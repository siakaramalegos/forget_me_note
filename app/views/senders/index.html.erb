<div class="container">
  <h1>Senders</h1>

  <table class="table table-stripe table-hover">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @senders.each do |sender| %>
        <tr>
          <td><%= sender.first_name %></td>
          <td><%= sender.last_name %></td>
          <td><%= sender.email %></td>
          <td><%= link_to 'Show', sender %></td>
          <td><%= link_to 'Edit', edit_sender_path(sender) %></td>
          <td><%= link_to 'Destroy', sender, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Sender', new_sender_path %>
</div>

