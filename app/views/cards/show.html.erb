<div class="container">


<p>
  <strong>Style:</strong>
  <%= @card.style %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @card.quantity %>
</p>

<p>
  <strong>Price:</strong>
  <%= @card.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @card.description %>
</p>

<p>
  <%= image_tag @card.image.url(:medium) %>
</p>

<%= button_to 'Add to Cart', line_items_path(card_id: @card), class: "btn btn-success btn-sm" %>

<%= link_to 'Edit', edit_card_path(@card) %> |
<%= link_to 'Back', cards_path %>

</div>
