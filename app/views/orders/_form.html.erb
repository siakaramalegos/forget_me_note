<%= form_for(@order) do |f| %>

<%= current_user.sender.last_name %>

  <div class="field form-group">
    <%= f.label :street %><br>
    <%= f.text_area :street, class: "form-control", placeholder: "100 St. Charles Ave" %>
  <div class="field form-group">
    <%= f.label :city %><br>
    <%= f.text_area :city, class: "form-control", placeholder: "New Orleans, LA 70115" %>
  <div class="field form-group">
    <%= f.label :state %><br>
    <%= f.text_area :state, class: "form-control", placeholder: "LA" %>
  <div class="field form-group">
    <%= f.label :zip %><br>
    <%= f.text_area :zip, class: "form-control", placeholder: "70115" %>
  </div>
  <div class="field form-group">
    <%= f.label :pay_type %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, {prompt: "Select a payment method"}, {class: "form-control"} %>
  </div>
  <div class="actions">
    <%= f.submit "Place Order", class: "btn btn-success" %>
  </div>
<% end %>
